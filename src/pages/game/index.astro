      /* } */
      .feature-box {
            display: flex;
            align-items: center;
            background-color: white;
            background: linear-gradient(90deg, #ffffff, #eeeeee); /* Gradient background */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            border-radius: 10px;
            padding: 20px;
            margin: 15px 0;
            width: 100%;
            max-width: 1200px;
            
            transition: transform 0.3s ease;
        }

        .feature-box:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.4);
        }

        .icon-container {
            margin-right: 20px;
            min-width: 50px;
        }

        .icon-container i {
            font-size: 48px;
            margin-bottom: 10px;
            color:black
        }

        .text-container {
            flex-grow: 1;
        }

        .feature-title {
            font-weight: 700;
            color: #2d3436;
            margin: 0 0 5px 0;
            font-size: 1.2rem;
        }

        .feature-description {
            color: #636e72;
            margin: 0;
            font-size: 0.9rem;
            line-height: 1.4;
        }

        /* Optional: Add responsive behavior */
        @media (max-width: 720px) {
            .feature-box {
                flex-direction: column;
                text-align: center;
            }

            .icon-container {
                margin-right: 0;
                margin-bottom: 15px;
            }
        }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <center style="font-size:xx-large; font-weight: bold;">
        Game
      </center>
      <section>
        <ul>
          {
            posts.map((post) => (

              <a class="feature-box"  href={"/game/"+post.link}>
                <div class="icon-container">
                <i class={post.icon}></i>
            </div>
            <div class="text-container">
            <h3 class="feature-title">{post.title}</h3>
            <p class="feature-description">
